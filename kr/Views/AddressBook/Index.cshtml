@model List<demo.ViewModels.AddressBookViewModel>
@{
    ViewData["Title"] = "Адресная книга";
    ViewData["PageDescription"] = "Список сотрудников с контактными данными";
    Layout = "_Layout";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text"
                       class="form-control"
                       id="searchInput"
                       placeholder="Поиск по всем полям...">
                <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                    <i class="bi bi-x-circle"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="card fade-in">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="addressBookTable">
                        <thead>
                            <tr>
                                <th>ФИО</th>
                                <th>Email</th>
                                <th>Должность</th>
                                <th class="d-none d-md-table-cell">Телефон</th>
                                <th class="d-none d-lg-table-cell">Внутренний номер</th>
                                <th>Визитная карточка</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr class="employee-row">
                                    <td>
                                        <strong>@employee.FullName</strong>
                                    </td>
                                    <td>
                                        <a href="mailto:@employee.Email" class="text-decoration-none">
                                            <i class="bi bi-envelope me-1"></i>@employee.Email
                                        </a>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(employee.Position))
                                        {
                                            @employee.Position
                                        }
                                        else
                                        {
                                            <span class="text-muted">Не указана</span>
                                        }
                                    </td>
                                    <td class="d-none d-md-table-cell">
                                        @if (!string.IsNullOrEmpty(employee.Phone))
                                        {
                                            <a href="tel:@employee.Phone" class="text-decoration-none">
                                                <i class="bi bi-phone me-1"></i>@employee.Phone
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Не указан</span>
                                        }
                                    </td>
                                    <td class="d-none d-lg-table-cell">
                                        @if (!string.IsNullOrEmpty(employee.InternalNumber))
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-telephone-inbound me-1"></i>@employee.InternalNumber
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Не указан</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(employee.Phone) || !string.IsNullOrEmpty(employee.Email))
                                        {
                                            <a href="@employee.VCardUrl"
                                               class="btn btn-sm btn-outline-success"
                                               title="Скачать визитную карточку (vCard)"
                                               download>
                                                <i class="bi bi-person-vcard me-1"></i>vCard
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">
                                                <i class="bi bi-info-circle me-1"></i>Нет контактов
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="alert alert-info alert-dismissible fade show mt-3">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <i class="bi bi-info-circle fs-4"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="alert-heading">Визитные карточки vCard</h5>
                            <p class="mb-0">
                                Формат .vcf совместим с большинством почтовых клиентов и адресных книг
                                (Outlook, Apple Contacts, Google Contacts и др.)
                            </p>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                </div>

                <div class="text-center text-muted mt-3">
                    <small>
                        <i class="bi bi-person-badge me-1"></i>
                        Найдено сотрудников: <span id="employeeCount">@Model.Count</span>
                    </small>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-person-x display-1 text-muted mb-4"></i>
                    <h4 class="mb-3">Список сотрудников пуст</h4>
                    <p class="text-muted mb-4">Нет зарегистрированных сотрудников с контактными данными</p>
                    <a asp-controller="Admin" asp-action="CreateLink" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Добавить сотрудника
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const clearButton = document.getElementById('clearSearch');
            const tableRows = document.querySelectorAll('#addressBookTable tbody tr');
            const employeeCount = document.getElementById('employeeCount');

            // Функция поиска
            function performSearch() {
                const searchTerm = searchInput.value.toLowerCase().trim();
                let visibleCount = 0;

                tableRows.forEach(row => {
                    const rowText = row.textContent.toLowerCase();
                    const isVisible = searchTerm === '' || rowText.includes(searchTerm);
                    row.style.display = isVisible ? '' : 'none';

                    if (isVisible) {
                        visibleCount++;

                        if (searchTerm !== '') {
                            highlightMatches(row, searchTerm);
                        } else {
                            removeHighlights(row);
                        }
                    }
                });

                if (employeeCount) {
                    employeeCount.textContent = visibleCount;
                }
            }

            function highlightMatches(row, term) {
                const cells = row.querySelectorAll('td');
                cells.forEach(cell => {
                    const originalText = cell.getAttribute('data-original') || cell.innerHTML;
                    cell.setAttribute('data-original', originalText);

                    if (cell.textContent.toLowerCase().includes(term)) {
                        const regex = new RegExp(`(${term})`, 'gi');
                        const highlighted = originalText.replace(regex, '<mark>$1</mark>');
                        cell.innerHTML = highlighted;
                    }
                });
            }

            function removeHighlights(row) {
                const cells = row.querySelectorAll('td');
                cells.forEach(cell => {
                    const originalText = cell.getAttribute('data-original');
                    if (originalText) {
                        cell.innerHTML = originalText;
                        cell.removeAttribute('data-original');
                    }
                });
            }

            searchInput.addEventListener('input', performSearch);
            searchInput.addEventListener('keyup', function(e) {
                if (e.key === 'Escape') {
                    searchInput.value = '';
                    performSearch();
                    searchInput.focus();
                }
            });

            clearButton.addEventListener('click', function() {
                searchInput.value = '';
                performSearch();
                searchInput.focus();
            });

            searchInput.focus();

            const tableHeaders = document.querySelectorAll('#addressBookTable th[data-sort]');
            tableHeaders.forEach(header => {
                header.style.cursor = 'pointer';
                header.addEventListener('click', function() {
                    const columnIndex = this.cellIndex;
                    const sortDirection = this.getAttribute('data-sort-direction') || 'asc';

                    tableHeaders.forEach(h => {
                        if (h !== this) {
                            h.removeAttribute('data-sort-direction');
                            h.classList.remove('sorted-asc', 'sorted-desc');
                        }
                    });

                    const rows = Array.from(tableRows);
                    const newDirection = sortDirection === 'asc' ? 'desc' : 'asc';

                    rows.sort((a, b) => {
                        const aValue = a.cells[columnIndex].textContent.trim().toLowerCase();
                        const bValue = b.cells[columnIndex].textContent.trim().toLowerCase();

                        if (newDirection === 'asc') {
                            return aValue.localeCompare(bValue);
                        } else {
                            return bValue.localeCompare(aValue);
                        }
                    });

                    const tbody = document.querySelector('#addressBookTable tbody');
                    rows.forEach(row => tbody.appendChild(row));

                    this.setAttribute('data-sort-direction', newDirection);
                    this.classList.toggle('sorted-asc', newDirection === 'asc');
                    this.classList.toggle('sorted-desc', newDirection === 'desc');
                });
            });
        });
    </script>
}