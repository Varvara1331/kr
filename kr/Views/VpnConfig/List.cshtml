@using System.Collections.Generic
@{
    ViewData["Title"] = "Список конфигураций";
    Layout = "_Layout";

    var configs = ViewBag.Configs as IEnumerable<dynamic>;
    var hasConfigs = configs != null && configs.Any();
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="bi bi-list me-2"></i>Список VPN конфигураций
                    </h4>
                </div>
                <div class="card-body">

                    @if (!hasConfigs)
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-shield-lock display-1 text-muted mb-4"></i>
                            <h4>Нет конфигураций</h4>
                            <p class="text-muted">Создайте первую конфигурацию</p>
                            <a href="/vpnconfig/create" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-1"></i>Создать конфигурацию
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Название</th>
                                        <th>Сервер</th>
                                        <th>Порт</th>
                                        <th>Создана</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var config in configs)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@config.Name</strong>
                                            </td>
                                            <td>@config.ServerAddress</td>
                                            <td>@config.ServerPort</td>
                                            <td>@(((DateTime)config.CreatedAt).ToString("dd.MM.yyyy HH:mm"))</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="/vpnconfig/download/@config.Id"
                                                       class="btn btn-outline-success" title="Скачать">
                                                        <i class="bi bi-download"></i>
                                                    </a>
                                                    <a href="/vpnconfig/view/@config.Id"
                                                       class="btn btn-outline-info" title="Просмотреть">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="/vpnconfig/delete/@config.Id"
                                                       class="btn btn-outline-danger" title="Удалить">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <div class="mt-3">
                        <a href="/vpnconfig/create" class="btn btn-primary me-2">
                            <i class="bi bi-plus-circle me-1"></i>Новая конфигурация
                        </a>
                        <a href="/vpnconfig" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Назад
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>