@{
    ViewData["Title"] = "Просмотр конфигурации";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="bi bi-eye me-2"></i>Просмотр конфигурации
                    </h4>
                </div>
                <div class="card-body">

                    @if (ViewBag.Config != null)
                    {
                        var config = (demo.Models.VpnConfig)ViewBag.Config;

                        <div class="mb-4">
                            <h5>Информация о конфигурации:</h5>
                            <div class="card bg-light">
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-3">Название:</dt>
                                        <dd class="col-sm-9"><strong>@config.Name</strong></dd>

                                        <dt class="col-sm-3">Сервер:</dt>
                                        <dd class="col-sm-9">@config.ServerAddress:@config.ServerPort</dd>

                                        <dt class="col-sm-3">Протокол:</dt>
                                        <dd class="col-sm-9">@config.Protocol</dd>

                                        <dt class="col-sm-3">Тип:</dt>
                                        <dd class="col-sm-9">@config.ConfigType</dd>

                                        @if (!string.IsNullOrEmpty(config.Description))
                                        {
                                            <dt class="col-sm-3">Описание:</dt>
                                            <dd class="col-sm-9">@config.Description</dd>
                                        }

                                        <dt class="col-sm-3">Создана:</dt>
                                        <dd class="col-sm-9">@config.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Содержимое .conf файла:</label>
                            <pre class="bg-light p-3 border rounded"
                                 style="max-height: 400px; overflow-y: auto; font-family: 'Courier New', monospace;">@config.ConfigContent</pre>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/vpnconfig/list" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>К списку
                            </a>
                            <a href="/vpnconfig/download/@config.Id" class="btn btn-success">
                                <i class="bi bi-download me-1"></i>Скачать .conf файл
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Конфигурация не найдена
                        </div>
                        <a href="/vpnconfig/list" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Вернуться к списку
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>