@if (ViewData["ShowPageHeader"] as bool? ?? true)
{
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1>@ViewData["Title"]</h1>
                    @if (ViewData["PageDescription"] != null)
                    {
                        <p class="lead">@ViewData["PageDescription"]</p>
                    }
                </div>
                @if (ViewData["PageAction"] != null)
                {
                    <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                        @Html.Raw(ViewData["PageAction"])
                    </div>
                }
            </div>
        </div>
    </div>
}