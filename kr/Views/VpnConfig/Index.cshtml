@{
    ViewData["Title"] = "VPN Конфигурации";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="bi bi-shield-lock me-2"></i>VPN Конфигурации
                    </h4>
                </div>
                <div class="card-body text-center">

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @ViewBag.Error
                        </div>
                    }

                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle me-2"></i>
                            @ViewBag.Success
                        </div>
                    }

                    <div class="mb-4">
                        <i class="bi bi-shield-lock display-1 text-primary mb-3"></i>
                        <h2>Управление VPN конфигурациями</h2>
                        <p class="text-muted">Создавайте и управляйте конфигурациями VPN подключений</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <i class="bi bi-plus-circle display-4 text-success mb-3"></i>
                                    <h5>Создать новую</h5>
                                    <p>Добавьте новую VPN конфигурацию</p>
                                    <a href="/vpnconfig/create" class="btn btn-success w-100">
                                        <i class="bi bi-plus me-1"></i>Создать
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <i class="bi bi-list display-4 text-primary mb-3"></i>
                                    <h5>Список конфигураций</h5>
                                    <p>Просмотр всех сохраненных конфигураций</p>
                                    <a href="/vpnconfig/list" class="btn btn-primary w-100">
                                        <i class="bi bi-list me-1"></i>Просмотреть
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a href="/" class="btn btn-outline-primary me-md-2">
                            <i class="bi bi-house me-1"></i>На главную
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>